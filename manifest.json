{

  "description": "Handles cryptographically blinded tokens for bypassing Cloudflare challenge pages",
  "manifest_version": 2,
  "name": "Cloudflare Edge Pass",
  "version": "0.4",
  "icons": {
    "48": "icons/ticket-48.png"
  },

  "background": {
    "scripts": [
        "scripts/sjcl.js",
        "scripts/crypto.js",
        "scripts/tokens.js",
        "scripts/background.js",
        "scripts/config.js"
    ]
  },

  "permissions": [
    "alarms",
    "cookies",
    "<all_urls>",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],

  "browser_action": {
    "default_icon": "icons/ticket-empty-32.png",
    "default_title": "Cloudflare Edge Pass",
    "default_popup": "popup/bc-plugin.html"
  }

}
